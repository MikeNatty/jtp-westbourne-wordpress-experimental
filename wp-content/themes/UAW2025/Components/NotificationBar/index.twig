{% if showNotification %}
  <flynt-component name="NotificationBar" data-notification-id="{{ notificationId }}">
    <div class="container">
      {{ notificationContent|e('wp_kses_post') }}
      <button type="button" class="button--icon" data-ref="closeButton" data-icon="close-medium"></button>
    </div>
  </flynt-component>
{% endif %}
