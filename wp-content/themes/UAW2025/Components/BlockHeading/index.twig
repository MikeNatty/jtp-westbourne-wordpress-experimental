<flynt-component name="BlockHeading" data-animated>
  {% include 'templates/_anchor.twig' with {'anchorId': anchorId } only %}
  <div class="container">
    <div class="content-section">
      <div class="lhs">
        <h1 animation="text-reveal">{{ title }}</h1>
        {# {% if sectionHeading %}
          <p class="sectionHeading">{{ sectionHeading }}</p>
        {% endif %}  #}
      </div>
      {% if cta.type != 'none' or contentHtml %}
        <div class="rhs" animation="fade-up" animation-delay="2">
          <div class="description">
            {% if contentHtml %}     
              {{ contentHtml|e('wp_kses_post') }}
            {% endif %}
          </div>
          {% include 'templates/_cta.twig' with {
            cta: cta,
          } only %}
        </div>
      {% endif %}

    </div>
  </div>
</flynt-component>
