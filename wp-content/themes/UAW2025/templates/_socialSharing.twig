
<div name="SocialSharing" class="container">
    <div class="content" {% if size %}data-size="{{size}}"{% endif %}>
        <div class="cta-container">
            {% if cta %}
                <a href="{{ cta.url }}" title="{{ cta.title }}" target="{{ cta.target }}" class="button cta">{{ cta.title }}</a>
            {% endif %}
            {% if post.link %}
            <div class="social-sharing">
                {# Social Links #}
                <nav aria-label="Social Media Sharing">
                    <ul class="social-sharing-list">
                        <li>
                            <a href="https://www.linkedin.com/sharing/share-offsite/?url={{post.link}}" class="button--icon" data-icon="social-facebook" data-button-theme="tertiary" title="Share on Facebook">Share on Facebook</a>
                        </li>
                        <li>
                            <a href="https://www.facebook.com/sharer/sharer.php?u={{post.link}}" class="button--icon" data-icon="linkedin" data-button-theme="tertiary" title="Share on LinkedIn">Share on LinkedIn</a>
                        </li>
                        {# <li>
                            <a href="{{socialLinks.instagram}}" class="button--icon" data-icon="instagram" data-button-theme="tertiary" title="Instagram">Instagram</a>
                        </li> #}
                    </ul>
                </nav>
            </div>
            {% endif %}
        </div>
    </div>
</div>
